@model X.PagedList.IPagedList<aspNETuniversity.Models.StudGroup>
@using X.PagedList;
@using X.PagedList.Mvc.Core;

<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Группы</h1>

 @if (ViewBag.Role=="admin" || ViewBag.Role=="dean")
{
<p>
    <a asp-action="Create" class="btn btn-primary m-1">Добавить группу</a>
</p>
}
@using (Html.BeginForm())
{
    <p>
        Поиск: @Html.TextBox("SearchString", null, new { @class= "form-control col-8"})
        <input type="submit" value="Найти" class="btn btn-outline-secondary btn-sm mt-2" />
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Год набора
            </th>
            <th>
                Код специальности
            </th>
            <th>
                Шифр группы
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecializationCodeNavigation.SpecCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudGroupCode)
            </td>
            <td>
                 @if (ViewBag.Role=="admin" || ViewBag.Role=="dean" && ViewBag.Faculty==item.SpecializationCodeNavigation.FacultyCodeNavigation.FacultyCode.ToString())
                {
                <a asp-action="Edit" asp-route-id="@item.StudGroupCode" class="btn btn-outline-primary">Изменить</a>
                <a asp-action="Delete" asp-route-id="@item.StudGroupCode" class="btn btn-outline-primary ms-1 me-1">Удалить</a>
                }
                <a asp-action="Details" asp-route-id="@item.StudGroupCode" class="btn btn-outline-secondary">Информация</a>
            </td>
        </tr>
}
    </tbody>
</table>

Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index",  new { page, currentFilter = ViewBag.CurrentFilter }))
