@model aspNETuniversity.Models.Student

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Информация</h1>

<div>
    <h4>Студент</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
             <h6>Имя</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
             <h6>Зарплата отца</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalaryFather)
        </dd>
        <dt class = "col-sm-2">
           <h6>Зарплата матери</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalaryMother)
        </dd>
        <dt class = "col-sm-2">
            <h6>Количество членов семьи</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FamilyKol)
        </dd>
        <dt class = "col-sm-2">
            <h6>Шифр группы</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudGroupCodeNavigation.StudGroupCode)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Вернуться назад</a>
</div>
