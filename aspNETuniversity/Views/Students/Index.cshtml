@model IEnumerable<aspNETuniversity.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryFather)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryMother)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamilyKol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudGroupCodeNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryFather)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryMother)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyKol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudGroupCodeNavigation.StudGroupCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Zachetka">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Zachetka">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Zachetka">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
