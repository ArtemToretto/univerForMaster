@model aspNETuniversity.Models.Student

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить?</h3>
<div>
    <h4>Студент</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <h6>Имя</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            <h6>Зарплата отца</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalaryFather)
        </dd>
        <dt class = "col-sm-2">
            <h6>Зарплата матери</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalaryMother)
        </dd>
        <dt class = "col-sm-2">
            <h6>Количество членов семьи</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FamilyKol)
        </dd>
        <dt class = "col-sm-2">
            <h6>Шифр группы</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudGroupCodeNavigation.StudGroupCode)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Zachetka" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться назад</a>
    </form>
</div>
