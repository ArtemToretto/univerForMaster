@model aspNETuniversity.Models.LoginModel
 
 
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="row d-flex">
        <div class="col-12 d-flex flex-column align-items-center justify-content-center">
            <h2>Вход на сайт</h2>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                @Html.ValidationMessageFor(model => model.Login)
                <label asp-for="Login">Введите логин</label>
                <input type="text" asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" />
            </div>
            <div class="form-group">
                 @Html.ValidationMessageFor(model => model.Password)
                <label asp-for="Password">Введите пароль</label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" />
            </div>
            <div>
                <input type="submit" value="Войти" class="btn btn-primary btn-lg mt-2 mb-1 col-12" />
            </div>
            <div>
                 <a asp-action="Register" asp-controller="Account" class="btn btn-outline-primary btn-sm">Регистрация</a>
            </div>
        </div>
    </div>
</form>
