@model aspNETuniversity.Models.RegisterModel
 
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="row d-flex">
        <div class="col-12 d-flex flex-column align-items-center justify-content-center">
            <h2>Регистрация</h2>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                @Html.ValidationMessageFor(model => model.Login)
                <label asp-for="Login">Введите логин</label><br />
                <input type="text" asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" />
            </div>
            <div>
                @Html.ValidationMessageFor(model => model.Password)
                <label asp-for="Password">Введите пароль</label><br />
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" />
            </div>
            <div>
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" />
            </div>

            <div>
                <input type="submit" value="Регистрация" class="btn btn-primary btn-lg mt-2 mb-1 col-12" />
            </div>
        </div>
    </div>
</form>
