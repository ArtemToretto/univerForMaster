@model aspNETuniversity.Models.Faculty

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить?</h3>
<div>
    <h4>Факультет</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <h6>Имя декана</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeanName)
        </dd>
        <dt class = "col-sm-2">
            <h6>Название факультета</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacultyName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FacultyCode" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться назад</a>
    </form>
</div>
